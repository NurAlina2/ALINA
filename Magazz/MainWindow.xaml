<Window x:Class="Magazz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="43*"/>
            <RowDefinition Height="355*"/>
            <RowDefinition Height="20*"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="CadetBlue"></Rectangle>
        <!--<Image HorizontalAlignment="Left"   Source="/Resources/school_logo.png"></Image>-->
        <TextBlock x:Name="TitlePage" FontSize="25">Магазин игрушек</TextBlock>
        <Button x:Name="BackBtn"  HorizontalAlignment="Right" Margin="100 0" Click="BackBtn_Click">Назад
        </Button>
        <Button x:Name="ExitBtn"  HorizontalAlignment="Right" Margin="10 0" Click="ExitBtn_Click" >Выход</Button>
        <Rectangle Grid.Row="2" Fill="CadetBlue"></Rectangle>
        <Frame Grid.Row="1" x:Name="MyFrame" NavigationUIVisibility="Hidden"></Frame>


    </Grid>
</Window>
